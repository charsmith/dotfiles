git_branch() { 
	git branch 2>/dev/null | awk '{if ($1=="*") print "(" $2 ")"}'
}

in_vim() { 
	in_vim=`ps -T | grep -i 'vim' | grep -v 'grep' | wc -l | awk '{print $1}'`
	if [ "$in_vim" -gt "0" ]; then
		echo "(vim $in_vim)"
	fi
	echo  ""
}
growl() {
case "$TERM" in
screen)
	echo -e $'\e]9;'$*'\007' > /dev/$(ps | grep [s]creen | tail -1 | awk '{print $2}') ; return ;
	;;
*)
	echo -e $'\e]9;'$*'\007' ; return ;
    ;;
esac
}
