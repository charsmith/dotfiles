git_branch() {
    git branch 2>/dev/null | awk '{if ($1=="*") print "(" $2 ")"}'
}

in_vim() { 
	in_vim=`ps -T | grep -i 'vim' | grep -v 'grep' | wc -l | awk '{print $1}'`
	if [ "$in_vim" -gt "0" ]; then
		echo "(vim $in_vim)"
	fi
	echo  ""
}

function removeFromPath() {
    export PATH=$(echo $PATH | sed -E -e "s;:$1;;" -e "s;$1:?;;")
}
